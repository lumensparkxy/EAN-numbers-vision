# Environment
ENVIRONMENT=dev

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=product-images
# Or use Managed Identity (leave connection string empty)
AZURE_STORAGE_ACCOUNT_URL=https://<account>.blob.core.windows.net

# Azure Cosmos DB (MongoDB API)
# Example: mongodb://<user>:<password>@<account>.mongo.cosmos.azure.com:10255/?ssl=true&retrywrites=false&maxIdleTimeMS=120000&appName=@<account>@
MONGODB_URI=
MONGODB_DATABASE=ean-extraction-dev

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-3.0-pro-preview

# Azure Key Vault (optional, for secret management)
AZURE_KEYVAULT_URL=https://<vault-name>.vault.azure.net/

# Worker Configuration
WORKER_POLL_INTERVAL=5
WORKER_BATCH_SIZE=10
WORKER_MAX_RETRIES=3

# Preprocessing
PREPROCESS_MAX_DIMENSION=2048
PREPROCESS_DENOISE_STRENGTH=10

# Gemini
GEMINI_MAX_TOKENS=1024
GEMINI_TEMPERATURE=0.1
GEMINI_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Manual Review UI
REVIEW_UI_HOST=0.0.0.0
REVIEW_UI_PORT=8000
